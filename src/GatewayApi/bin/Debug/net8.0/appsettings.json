{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Routes": [],
  "GlobalConfiguration": {
    "UpstreamHttpMethod": [
      "GET",
      "POST",
      "PUT",
      "DELETE",
      "OPTIONS"
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "users": {
        "ClusterId": "Users",
        "Match": {
          "Path": "{**remainder}"
        }
      },
      "products": {
        "ClusterId": "products",
        "Match": {
          "Path": "/api/v1/products/{**remainder}"
        }
      },
      "orders": {
        "ClusterId": "orders",
        "Match": {
          "Path": "/api/v1/orders/{**remainder}"
        }
      }
    },
    "Clusters": {
      "Users": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5008"
          }
        }
      },
      "Products": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5034"
          }
        }
      },
      "Orders": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5015"
          }
        }
      }
    }
  }
}